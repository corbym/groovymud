<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>
	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %l > %p - %m %c %n"/>
		</layout>
	</appender>
    <appender name="FILE" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="../logs/groovymud.log"/>
        <param name="DatePattern" value="yyyyMMdd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %l > %p - %m %n"/>
        </layout>
    </appender>

    <logger name="org.groovymud.engine.JMudEngine" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="FILE"/>
    </logger>    
    <logger name="org.groovymud.registry" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="FILE"/>
    </logger> 
    <logger name="groovy.lang" additivity="false">
        <level value="DEBUG"/>
        <appender-ref ref="FILE"/>
    </logger>

    <root>
        <level value="DEBUG"/>
        <appender-ref ref="FILE"/>
    </root> 
</log4j:configuration>
